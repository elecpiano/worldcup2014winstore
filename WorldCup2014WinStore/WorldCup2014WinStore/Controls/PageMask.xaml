            <Path x:Name="fillup" Data="M360,27 C176.089,27 27,176.089 27,360 C27,543.911 176.089,693 360,693 C543.911,693 693,543.911 693,360 C693,176.089 543.911,27 360,27 z M0,0 L720,0 L720,720 L0,720 z" Fill="{StaticResource Switch_Mask_Color}" Stretch="Fill" StrokeThickness="0" UseLayoutRounding="False"/>

        </Grid>

        <controls:SpinningBall x:Name="spinningBall" Width="150" Height="150" RenderTransformOrigin="0.5,0.5"
                               IsHitTestVisible="False">
            <controls:SpinningBall.RenderTransform>
                <CompositeTransform/>
            </controls:SpinningBall.RenderTransform>
        </controls:SpinningBall>
        
    </Grid>

</UserControl>
