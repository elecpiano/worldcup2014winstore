                <CompositeTransform ScaleX="1.4" ScaleY="1.4"/>
            </Grid.RenderTransform>
            <Ellipse x:Name="ring0" Fill="{StaticResource Switch_Mask_Color}" Height="100" Width="100" StrokeThickness="0"/>
            <Path x:Name="ring1" Data="M100,50 C72.3858,50 50,72.3858 50,100 C50,127.614 72.3858,150 100,150 C127.614,150 150,127.614 150,100 C150,72.3858 127.614,50 100,50 z M100,0 C155.228,0 200,44.7715 200,100 C200,155.228 155.228,200 100,200 C44.7715,200 0,155.228 0,100 C0,44.7715 44.7715,0 100,0 z" Fill="{StaticResource Switch_Mask_Color}" Margin="262" Stretch="Fill" UseLayoutRounding="False"/>
            <Path x:Name="ring2" Data="M150,50 C94.7715,50 50,94.7715 50,150 C50,205.228 94.7715,250 150,250 C205.228,250 250,205.228 250,150 C250,94.7715 205.228,50 150,50 z M150,0 C232.843,0 300,67.1573 300,150 C300,232.843 232.843,300 150,300 C67.1573,300 0,232.843 0,150 C0,67.1573 67.1573,0 150,0 z" Fill="{StaticResource Switch_Mask_Color}" Margin="214" Stretch="Fill" UseLayoutRounding="False"/>
            <Path x:Name="ring3" Data="M200,50 C117.157,50 50,117.157 50,200 C50,282.843 117.157,350 200,350 C282.843,350 350,282.843 350,200 C350,117.157 282.843,50 200,50 z M200,0 C310.457,0 400,89.5431 400,200 C400,310.457 310.457,400 200,400 C89.5431,400 0,310.457 0,200 C0,89.5431 89.5431,0 200,0 z" Fill="{StaticResource Switch_Mask_Color}" Margin="167" Stretch="Fill" UseLayoutRounding="False"/>
